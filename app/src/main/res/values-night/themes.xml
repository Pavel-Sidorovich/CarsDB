<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_night_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorDivider">@color/color_divider_light</item>
        <item name="colorBackground">@color/color_bg_night</item>
        <item name="colorSelected">@color/color_primary_night</item>
        <item name="colorActionBar">@color/color_bg</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!--        Change color of title-->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <!--        Change color of arrow-->
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>
</resources>