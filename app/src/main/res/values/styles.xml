<resources>

    <style name="Profile">
    </style>

    <style name="Profile.InputLayout" parent="Profile">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/spacing_normal_16</item>
    </style>

    <style name="Profile.Spinner" parent="Profile">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/spacing_normal_16</item>
    </style>

    <style name="Profile.InputLayout.Single" parent="Profile.InputLayout">
        <item name="android:singleLine">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Profile.InputLayout.Single.Price" parent="Profile.InputLayout.Single">
        <item name="counterMaxLength">10</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorActionBar</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorActionBar</item>
    </style>
</resources>